{% extends 'base.html.twig' %}
{% block title 'Tous nos biens' %}
{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col" hidden>
                    {{ form_row(form.title) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">
        <h1>Voir tous nos biens</h1>
    </div>
    <div class="container">
        <div class="row flex mt-4">
            {% for property in properties %}
                <div class="col-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id: property.id, slug: property.getSlug}) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">
                                {{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})
                            </p>
                            <div class="text-primary" style="font-weight: bold; font-size: 2rem"> {{ property.getFormattedPrice }} €</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation" style="text-align: center">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>

{% endblock %}